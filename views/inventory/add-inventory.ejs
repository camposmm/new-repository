<!-- views/inventory/add-inventory.ejs -->

<h1>Add New Inventory Item</h1>

<form action="/inventory/item" method="POST">
  <label for="inv_make">Make:</label>
  <input type="text" name="inv_make" id="inv_make" required />

  <label for="inv_model">Model:</label>
  <input type="text" name="inv_model" id="inv_model" required />

  <label for="inv_year">Year:</label>
  <input type="number" name="inv_year" id="inv_year" required />

  <label for="inv_description">Description:</label>
  <textarea name="inv_description" id="inv_description" required></textarea>

  <label for="inv_image">Image URL:</label>
  <input type="url" name="inv_image" id="inv_image" required />

  <label for="inv_thumbnail">Thumbnail URL:</label>
  <input type="url" name="inv_thumbnail" id="inv_thumbnail" required />

  <label for="inv_price">Price:</label>
  <input type="number" name="inv_price" id="inv_price" step="0.01" required />

  <label for="inv_miles">Mileage:</label>
  <input type="number" name="inv_miles" id="inv_miles" required />

  <label for="inv_color">Color:</label>
  <input type="text" name="inv_color" id="inv_color" required />

  <label for="classification_id">Classification:</label>
  <select name="classification_id" id="classification_id" required>
    <% classifications.forEach(classification => { %>
      <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
    <% }); %>
  </select>

  <button type="submit">Add Inventory Item</button>
</form>