<header id="top-header"> 
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a> 
  </span> 
  <div id="tools"> 
    <% if (locals.account) { %>
      <!-- Show welcome message and logout link when logged in -->
      <a href="/account" title="Account Management">Welcome <%= account.account_firstname %></a>
      <a href="/account/logout" title="Logout">Logout</a>
    <% } else { %>
      <!-- Show My Account link when not logged in -->
      <a title="Click to log in" href="/account/login">My Account</a> 
    <% } %>
  </div> 
</header>
