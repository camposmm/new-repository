<main class="container">
  <h1><%= title %></h1>
  
  <% if (errors) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="POST" novalidate>
    <div class="form-group">
      <label for="classification_name">Classification Name:</label>
      <input type="text" class="form-control" name="classification_name" id="classification_name" 
             value="<%= classification_name || '' %>" required
             pattern="[A-Za-z]+" title="Only letters are allowed">
    </div>

    <button type="submit" class="btn btn-primary">Add Classification</button>
  </form>
</main>