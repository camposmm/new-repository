<!-- Main home page content -->
<h1>Welcome to CSE Motors!</h1>

<!-- Flash messages display -->
<% if (messages && messages.length > 0) { %>
  <div class="alert alert-<%= messages[0].type || 'info' %>">
    <%= messages[0].msg %>
  </div>
<% } %>

<!-- Hero section with featured vehicle -->
<section class="hero">
    <div class="hero-image">
        <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
    </div>
    <div class="hero-content translucent-box">
        <h2><span class="highlight">DMC Delorean</span><br>
        3 Cup holders<br>
        Superman doors<br>
        Fuzzy dice!</h2>
        <a href="#" class="cta-button">Own Today</a>
    </div>
</section>

<!-- Grid section with upgrades and reviews -->
<section class="grid-section"> 
    <!-- Vehicle upgrades section -->
    <div class="upgrades"> 
      <h3>Delorean Upgrades</h3> 
      <div class="upgrade-grid"> 
        <div class="upgrade-box"> 
          <img src="/images/upgrades/flux-cap.png" alt="Flux capacitor"> 
          <a href="#">Flux Capacitor</a> 
        </div> 
        <div class="upgrade-box"> 
          <img src="/images/upgrades/flame.jpg" alt="Flame decals"> 
          <a href="#">Flame Decals</a> 
        </div> 
        <div class="upgrade-box"> 
          <img src="/images/upgrades/bumper-sticker.jpg" alt="Bumper stickers"> 
          <a href="#">Bumper Stickers</a> 
        </div> 
        <div class="upgrade-box"> 
          <img src="/images/upgrades/hub-cap.jpg" alt="Hub caps"> 
          <a href="#">Hub Caps</a> 
        </div> 
      </div> 
    </div> 

    <!-- Customer reviews section -->
    <div class="reviews"> 
      <h3>DMC Delorean Reviews</h3> 
      <ul> 
        <li>"So fast it's almost like traveling in time." (4/5)</li> 
        <li>"Coolest ride on the road." (4/5)</li> 
        <li>"I'm feeling McFly!" (5/5)</li> 
        <li>"The most futuristic ride of our day." (4.5/5)</li> 
        <li>"80's livin and I love it!" (5/5)</li> 
      </ul> 
    </div> 
</section>
